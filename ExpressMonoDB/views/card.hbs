<h1>Курс</h1>

<div id="card">
    {{#if course.length}}
    <table>
        <thead>
            <tr>
                <th>Название</th>
                <th>Количество</th>
                <th>Действия</th>
            </tr>
        </thead>
    <tbody>

        {{#each course}}
        <tr>
            <td>{{title}}</td>
            <td>{{count}}</td>
            <td>
                <button class="btn btm-small js-remove" data-id="{{id}}">Удалить</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
  </table>
  <p><strong>Ценна:</strong><span class="price">{{price}}</span></p>
  {{else}}
  <p>Корзина пуста</p>
  {{/if}}
</div>